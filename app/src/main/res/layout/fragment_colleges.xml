<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gelo.ceuapp.Colleges"
    android:background="@drawable/ceulogotan">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <ImageView
        android:layout_width="183dp"
        android:layout_height="183dp"
        android:id="@+id/img_scitech"
        android:src="@drawable/imgscitech"

       />

    <ImageView
        android:layout_width="183dp"
        android:layout_height="183dp"
        android:id="@+id/img_pharma"
        android:src="@drawable/imgpharma"
        android:layout_below="@+id/img_scitech"
        />

    <ImageView
        android:layout_width="183dp"
        android:layout_height="183dp"
        android:id="@+id/img_dent"
        android:src="@drawable/imgdent"
        android:layout_toRightOf="@id/img_scitech"
        />

    <ImageView
        android:layout_width="183dp"
        android:layout_height="183dp"
        android:id="@+id/img_opto"
        android:src="@drawable/imgopto"
        android:layout_toRightOf="@id/img_pharma"
        android:layout_below="@id/img_dent"
        />

    <ImageView

        android:layout_width="183dp"
        android:layout_height="183dp"
        android:id="@+id/img_mt"
        android:src="@drawable/imgmedtech"
        android:layout_below="@id/img_pharma"
        />
     <ImageView
         android:layout_width="183dp"
         android:layout_height="183dp"
         android:id="@+id/img_gradschool"
         android:src="@drawable/imggradschool"
         android:layout_toRightOf="@id/img_mt"
         android:layout_below="@id/img_opto"
         />

    <ImageView
        android:layout_width="183dp"
        android:layout_height="183dp"
        android:id="@+id/img_nhm"
        android:src="@drawable/imgnhm"
        android:layout_below="@id/img_mt"
        />
    <ImageView
        android:layout_width="183dp"
        android:layout_height="183dp"
        android:id="@+id/img_nursing"
        android:src="@drawable/imgnursing"
        android:layout_toRightOf="@id/img_nhm"
        android:layout_below="@id/img_gradschool"
        />

        <ImageView
            android:layout_width="183dp"
            android:layout_height="183dp"
            android:id="@+id/img_sam"
            android:src="@drawable/imgsam"
            android:layout_below="@id/img_nhm"
                />

        <ImageView
            android:layout_width="183dp"
            android:layout_height="183dp"
            android:id="@+id/img_selams"
            android:src="@drawable/imgselams"
            android:layout_toRightOf="@id/img_sam"
            android:layout_below="@id/img_nursing"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:id="@+id/et_aboutt"/>





    </RelativeLayout>
    </ScrollView>

</RelativeLayout>
