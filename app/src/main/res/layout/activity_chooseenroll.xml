<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gelo.ceuapp.chooseenroll"
    android:background="@drawable/scorpibg">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_alienproc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:text="Alien/Non-Resident"
                android:textColor="#fff"
                android:textSize="20sp"
                android:layout_above="@+id/btn_seconddeg"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <Button
                android:id="@+id/btn_contin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/btn_alienproc"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/btn_alienproc"
                android:layout_marginBottom="97dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:text="Continuing Student"
                android:textColor="#fff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_fresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:text="Freshmen"
                android:textColor="#fff"
                android:textSize="20sp"
                android:layout_above="@+id/btn_alienproc"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/btn_seconddeg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:text="Second Degree"
                android:textColor="#fff"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/btn_transferee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:text="Transferee"
                android:textColor="#fff"
                android:textSize="20sp"
                android:layout_above="@+id/btn_contin"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/et_enroll"
                android:visibility="invisible"/>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
