<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gelo.ceuapp.MainFragment">


    <EditText
        android:id="@+id/et_search2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/et_aboutt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:visibility="invisible" />


    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="vertical">

        <AutoCompleteTextView
            android:id="@+id/actvd"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:hint="Search: Buildings or Department"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:background="@drawable/roundedcorners"
            android:text="Search"
            android:textColor="#fff"
            android:textSize="40dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll2">

        <ImageView
            android:id="@+id/img_themap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="the map"
            android:src="@drawable/campus_map_v3" />

    </LinearLayout>


</RelativeLayout>