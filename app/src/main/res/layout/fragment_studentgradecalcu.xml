<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gelo.ceuapp.studentgradecalcu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_calc_grade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Calculate your Grade"
                    android:textSize="35dp" />


                <EditText
                    android:id="@+id/et_cp1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_calc_grade"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:hint="Input your CP Grade"
                    android:textSize="30dp" />


                <EditText
                    android:id="@+id/et_exam1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_cp1"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:hint="Input your Exam Grade"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/btn_calculate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_exam1"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"
                    android:text="Calculate Grade"
                    android:textSize="30dp"
                    android:textColor="#fff" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_calculate"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/ttl_res"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="Your Computed Grade"
                        android:textColor="#fff"
                        android:textSize="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true" />
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rl1"

                android:layout_marginTop="15dp">

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/non"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Calculate your Average Grade"
                            android:textSize="35dp" />


                        <LinearLayout
                            android:id="@+id/llinner1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/non"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorPrimary">

                            <TextView
                                android:id="@+id/tv_results"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/non"
                                android:gravity="center"
                                android:text="Your Average Grade"
                                android:textColor="#fff"
                                android:textSize="30dp" />
                        </LinearLayout>


                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/ll1"
                    android:weightSum="3">


                    <EditText
                        android:id="@+id/tv_numavg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/llinner1"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2.75"
                        android:hint="Input your total subjects"
                        android:textSize="20dp" />

                    <ImageButton
                        android:id="@+id/btn_calc_avg_me"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".25"
                        android:background="@null"
                        android:src="@drawable/equal" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll0"
                    android:layout_marginTop="10dp"
                    android:weightSum="4">


                    <Button
                        android:id="@+id/btn_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/roundedcorners"
                        android:text="1.0"
                        android:textColor="#fff"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn_125"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/btn_one"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:text="1.25"
                        android:textColor="#fff"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/btn_125"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:text="1.5"
                        android:textColor="#fff"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn_175"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/btn_15"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:text="1.75"
                        android:textColor="#fff"
                        android:textSize="20dp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll2"
                    android:layout_marginTop="10dp"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/btn_225"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/btn_two"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:text="2.25"
                        android:textColor="#fff"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:text="2.0"
                        android:textColor="#fff"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn_275"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/btn_25"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:text="2.75"
                        android:textColor="#fff"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn_25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/btn_225"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:text="2.5"
                        android:textColor="#fff"
                        android:textSize="20dp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll3"
                    android:layout_marginTop="10dp"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/btn_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:text="3.0"
                        android:textColor="#fff"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/btn_three"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:text="4.0"
                        android:textColor="#fff"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/btn_four"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:text="5.0"
                        android:textColor="#fff"
                        android:textSize="20dp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll4"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/calc_btn_clear"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:text="CLEAR"
                            android:textColor="#fff"
                            android:textSize="30dp" />


                    </RelativeLayout>


                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>


</FrameLayout>
