<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gelo.ceuapp.studentgradecalcu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/eg_lbl1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="CP Grade"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/et_cp1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/eg_lbl1"
                    android:gravity="center"
                    android:hint="CP Grade"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/eg_lbl2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/et_cp1"
                    android:gravity="center"
                    android:text="Exam Grade"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/et_exam1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/eg_lbl2"
                    android:gravity="center"
                    android:hint="Exam Grade"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_calculate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_exam1"
                    android:text="Calculate Grade"
                    android:background="@color/colorPrimary"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/ttl_res"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_calculate"
                    android:gravity="center"
                    android:textSize="20dp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/rl1">

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/non"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Calculate your Average Grade"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/tv_results"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/non"
                            android:gravity="center"
                            android:layout_marginTop="20dp"
                            android:text="Your Average Grade:"
                            android:textSize="25dp" />

                        <EditText
                            android:id="@+id/tv_numavg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_results"
                            android:hint="Input your total subjects"
                            android:gravity="center"
                            android:textSize="20dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll1"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/btn_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:text="1.0" />

                        <Button
                            android:id="@+id/btn_125"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/btn_one"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:text="1.25" />

                        <Button
                            android:id="@+id/btn_15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/btn_125"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:text="1.5" />

                        <Button
                            android:id="@+id/btn_175"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/btn_15"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:text="1.75" />
                    </RelativeLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll2"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/btn_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:text="2.0" />

                        <Button
                            android:id="@+id/btn_225"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/btn_two"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:text="2.25" />

                        <Button
                            android:id="@+id/btn_25"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/btn_225"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:text="2.5" />

                        <Button
                            android:id="@+id/btn_275"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/btn_25"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:text="2.75" />
                    </RelativeLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll3"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/btn_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:text="3.0" />

                        <Button
                            android:id="@+id/btn_four"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"
                            android:layout_toRightOf="@+id/btn_three"
                            android:textSize="20dp"
                            android:text="4.0" />

                        <Button
                            android:id="@+id/btn_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/btn_four"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:text="5.0" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:id="@+id/btn_calc_avg"
                            android:layout_height="50dp"
                            android:src="@drawable/equal"
                            android:layout_toRightOf="@id/btn_5" />


                    </RelativeLayout>

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/ll5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll4"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/calc_btn_clear"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"
                            android:textSize="30dp"
                            android:gravity="center"
                            android:text="CLEAR" />


                    </RelativeLayout>


                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>


</FrameLayout>
