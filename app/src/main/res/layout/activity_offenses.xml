<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/scorpibg"
    tools:context="com.gelo.ceuapp.Offenses">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

           <EditText
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/et_off"
               android:visibility="invisible"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/handbook_pic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-350dp"
                android:id="@+id/iv_pic"
                />

            <com.google.android.gms.ads.AdView
                android:id="@+id/offensesAd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id_banner3"
                android:layout_marginTop="19dp"
                android:layout_below="@+id/btn_lessserious"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_minor"
                android:text="Slight Offense"
                android:layout_below="@+id/iv_pic"
                android:width="180dp"
                android:layout_marginTop="-340dp"
                android:textColor="#fff"
                android:background="@color/colorPrimary"
               />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_lessserious"
                android:text="Less Serious Offense"
                android:layout_below="@+id/btn_minor"
                android:textColor="#fff"
                android:width="180dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"/>

            <Button
                android:layout_marginTop="-340dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_serious"
                android:text="Serious Offense"
                android:layout_below="@+id/iv_pic"
                android:layout_toRightOf="@+id/btn_minor"
                android:layout_marginLeft="10dp"
                android:textColor="#fff"
                android:width="145dp"
                android:background="@color/colorPrimary"

               />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_other"
                android:text="Other Offenses"
                android:width="145dp"
                android:layout_below="@+id/btn_serious"
                android:layout_toRightOf="@id/btn_lessserious"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:background="@color/colorPrimary"
              />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
