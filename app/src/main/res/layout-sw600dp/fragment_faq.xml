<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/scorpibg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gelo.ceuapp.faq">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fillViewport="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_offense"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/et_aboutt"
                android:layout_marginTop="60dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:text="Disciplinary Measures"
                android:textColor="#fff"
                android:textSize="30sp" />


            <Button
                android:id="@+id/btn_enroll"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btn_ceuchoosemusic"
                android:layout_marginTop="14dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:text="Enrollment Procedures"
                android:textColor="#fff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_othertransac"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btn_offense"
                android:layout_marginTop="12dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:text="Other Transaction"
                android:textColor="#fff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_ceuchoosemusic"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btn_othertransac"
                android:layout_marginTop="13dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:text="CEU Music"
                android:textColor="#fff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_board"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btn_enroll"
                android:layout_marginTop="17dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:text="CEU Board Members"
                android:textColor="#fff"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_aboutt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />


            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id_banner1"></com.google.android.gms.ads.AdView>

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/adView"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/adView"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id_banner2" />

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>
