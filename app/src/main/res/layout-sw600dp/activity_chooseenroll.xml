<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/scorpibg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gelo.ceuapp.chooseenroll">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_alienproc"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="26dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:text="Alien/Non-Resident"
                android:textColor="#fff"
                android:textSize="30sp"
                android:layout_above="@+id/btn_seconddeg"
                android:layout_alignParentStart="true" />


            <Button
                android:id="@+id/btn_contin"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="17dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:text="Continuing Student"
                android:textColor="#fff"
                android:textSize="30sp"
                android:layout_below="@+id/btn_transferee"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/btn_fresh"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="26dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:text="Freshmen"
                android:textColor="#fff"
                android:textSize="30sp"
                android:layout_above="@+id/btn_alienproc"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/btn_seconddeg"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:text="Second Degree"
                android:textColor="#fff"
                android:textSize="30sp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/btn_transferee"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="18dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:text="Transferee"
                android:textColor="#fff"
                android:textSize="30sp"
                android:layout_below="@+id/btn_seconddeg"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/et_enroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

            <com.google.android.gms.ads.AdView
                android:id="@+id/chooseenrollad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id_banner1" />

            <com.google.android.gms.ads.AdView
                android:id="@+id/chooseenrollad2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id_banner2" />
        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
