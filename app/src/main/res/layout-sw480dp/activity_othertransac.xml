<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D895B0"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gelo.ceuapp.othertransac">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/scorpibg2"
        android:fillViewport="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_addndrop"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="29dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:text="Add and Drop"
                android:textColor="#fff"
                android:textSize="30sp"
                android:layout_below="@+id/et_chooseothertransac"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/btn_crossenroll"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/btn_addndrop"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:text="Cross Enroll"
                android:textColor="#fff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_evaluation"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/btn_crossenroll"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:text="evaluation for graduating students"
                android:textColor="#fff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_id"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/btn_evaluation"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:text="ID"
                android:textColor="#fff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_promisorry"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/btn_id"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:text="Promissory Note"
                android:textColor="#fff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_readmission"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/btn_promisorry"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:text="Readmission"
                android:textColor="#fff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_refund"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/btn_readmission"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:text="Refund"
                android:textColor="#fff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_shifting"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/btn_refund"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:text="Shifting"
                android:textColor="#fff"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_chooseothertransac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>
